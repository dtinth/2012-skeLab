<div class="container">

  <div class="row">
    <div class="span3">
      <h1 class="task-list-header">Task List</h1>
      <ul class="task-list">
        <% @tasks.each do |task| %>
          <li<% if task == @task %> class="active"<% end %>><a href="<%= task_path(task) %>"
            ><% if can_manage_tasks %><%= task.index %> - <% end %><%= task.title %><% unless task.public %> <i>(private)</i><% end %></a>
        <% end %>
      </ul>
      <% if can_manage_tasks %>
        <div class="task-list-actions">
          <a href="<%= new_task_path %>" class="btn btn-success">New Task</a>
        </div>
      <% end %>
    </div>

    <%= yield :data %>
    <% if @task %>
      </div>
    <% else %>
    <% end %>

  </div>
</div>


